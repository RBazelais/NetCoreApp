@{
    ViewData["Title"] = "Create an Activity!";
}
<h2>@ViewData["Title"]</h2>

@model NetCoreApp.Models.ActivitiesViewModel

<div class="container">
	<div class="row">
		<form asp-controller="Activities" asp-action="CreateActivity" class="form-horizontal" method="post">
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="Title" class="col-sm-2 control-label">Title</label>
                    <div class="col-sm-6">
                        <input asp-for="Title" class="form-control" placeholder="Title" type="text">
                        <span asp-validation-for="Title"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Date" class="col-sm-2 control-label">Date</label>
                    <div class="col-sm-6">
                        <input asp-for="Date" class="form-control">
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="Time" class="col-sm-2 control-label">Time</label>
                    <div class="col-sm-6">
                        <input asp-for="Time" class="form-control" type="time">
                        <span asp-validation-for="Time"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Duration" class="col-sm-2 control-label">Duration</label>
                    <div class="col-sm-3">
                        <input asp-for="Duration" class="form-control" placeholder="Duration" type="text">
                        <!-- <span asp-validation-for="Duration"></span> -->
                    </div>
                    <div class="col-sm-3">
                        <select asp-for="Duration" class="form-control">
                            <option>Minutes</option>
                            <option>Hours</option>
                            <option>Days</option>
                        </select>
                        <!-- <span asp-validation-for="Duration"></span>  -->
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="col-sm-2 control-label">Description</label>
                <div class="col-sm-6">
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Tell us about your activity..."></textarea>
                    <span asp-validation-for="Description"></span>
                </div>
            </div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-6">
					<button class="btn btn-default" type="submit">Create Activity</button>
				</div>
			</div>
		</form>
		<a asp-action="Dashboard" asp-controller="Activities"><button class="btn btn-primary" type="submit">Dashboard</button></a> 
		<a asp-action="Logout" asp-controller="Home"><button class="btn btn-primary" type="submit">Logout</button></a>
	</div>
</div>